{
  "formatCodeOptions": {
    "indentSize": 4,
    "tabSize": 4,
    "newLineCharacter": "\r\n",
    "convertTabsToSpaces": true,
    "insertSpaceAfterCommaDelimiter": true,
    "insertSpaceAfterSemicolonInForStatements": true,
    "insertSpaceBeforeAndAfterBinaryOperators": true,
    "insertSpaceAfterKeywordsInControlFlowStatements": true,
    "insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
    "insertSpaceAfterOpeningAndBeforeClosingNonemptyParenthesis": false,
    "placeOpenBraceOnNewLineForFunctions": false,
    "placeOpenBraceOnNewLineForControlBlocks": false
  },
  "buildOnSave": false,
  "compileOnSave": false,
  "scripts": {},
  "filesGlob": [
    "./src/**/*.ts",
    "!node_modules/**",
    "!examples_typescript/**",
    "!examples_javascript/**",
    "!compiled/**"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "target": "ES5",
    "noEmit": false,
    "noEmitOnError": true,
    "experimentalDecorators": false,
    "outDir": "./compiled",
    "charset": "UTF-8",
    "noLib": false,
    "diagnostics": true,
    "declaration": false
  },
  "files": [
    "./src/index.ts",
    "./src/lib.d.ts",
    "./src/lib/BaseCollection.ts",
    "./src/lib/BinaryLogHelper.ts",
    "./src/lib/ConditionalConverter.ts",
    "./src/lib/Connection.ts",
    "./src/lib/CriteriaBuilder.ts",
    "./src/lib/CriteriaDivider.ts",
    "./src/lib/Database.ts",
    "./src/lib/Helper.ts",
    "./src/lib/IDatabaseCollection.ts",
    "./src/lib/ObservableCollection.ts",
    "./src/lib/ObservableObject.ts",
    "./src/lib/queries/DeleteQuery.ts",
    "./src/lib/queries/IQuery.ts",
    "./src/lib/queries/SaveQuery.ts",
    "./src/lib/queries/SelectQuery.ts",
    "./src/lib/queries/SelectQueryRules.ts",
    "./src/lib/Table.ts",
    "./src/lib/WhereBuilder.ts",
    "./src/lib/Wrapper.ts"
  ],
  "exclude": [
    "./node_modules",
    "./src/typings"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
