{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "target": "es5",
    "noEmit": false,
    "noEmitOnError": true,
    "experimentalDecorators": false,
    "outDir": "./compiled",
    "charset": "UTF-8",
    "listFiles": true,
    "noLib": true,
    "diagnostics": true,
    "declaration": false
  },
  "files": [
    "./src/lib.d.ts",
    "./src/index.ts",
    "./src/lib/CriteriaBuilder.ts",
    "./src/lib/SelectQueryRules.ts",
    "./src/lib/SelectQuery.ts",
    "./src/lib/Connection.ts",
    "./src/lib/Table.ts",
    "./src/lib/Helper.ts",
    "./src/lib/Wrapper.ts"
  ],
  "exclude": [
    "./src/typings"
  ]
}