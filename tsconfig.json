{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "target": "es5",
    "noEmit": false,
    "noEmitOnError": true,
    "experimentalDecorators": false,
    "outDir": "./compiled",
